{
  "name": "scull",
  "version": "2.0.1",
  "description": "Raft for Node.js",
  "main": "shell.js",
  "scripts": {
    "test": "npm run quick-tests",
    "quick-tests": "lab -vl test/active-network.js && lab -vl test/passive-network.js && lab -vl test/incoming-dispatcher.js && lab -vl test/election.js && lab -vl test/log-replication.js && lab -vl test/log-replication-catchup.js && lab -vl test/log-compaction.js && lab -vl test/leveldown.js && lab -vl test/levelup.js && lab -vl test/persistence.js && lab -vl test/remote-commands.js && lab -vl test/weakening.js && lab -vl test/log.js && lab -vl test/leakage.js",
    "resilience-tests": "npm run resilience-tests-memory && npm run resilience-tests-disk",
    "resilience-tests-memory": "lab test/resilience/resilience-chaos-memory.js && lab test/resilience/resilience-order-memory.js",
    "resilience-tests-disk": "lab test/resilience/resilience-order-disk.js && lab test/resilience/resilience-chaos-disk.js",
    "test-some": "lab -vl test/active-network.js test/election.js",
    "test-coverage": "node --harmony node_modules/istanbul/lib/cli.js cover -- lab -vl && istanbul check-coverage",
    "style": "eslint shell.js lib"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hitchyjs/scull"
  },
  "keywords": [
    "raft",
    "distributed",
    "consensus",
    "leveldb"
  ],
  "author": "pgte",
  "contributors": [
    {
      "name": "Thomas Urban",
      "email": "thomas.urban@cepharum.de",
      "url": "https://cepharum.de"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hitchyjs/scull/issues"
  },
  "homepage": "https://github.com/hitchyjs/scull#readme",
  "devDependencies": {
    "code": "^3.0.1",
    "eslint": "^3.1.1",
    "eslint-config-standard": "^5.3.5",
    "eslint-plugin-promise": "^2.0.0",
    "eslint-plugin-standard": "^2.0.0",
    "istanbul": "^0.4.4",
    "lab": "^10.9.0",
    "memdown": "^1.2.0",
    "mkdirp": "^0.5.1",
    "pre-commit": "^1.1.3",
    "rimraf": "^2.5.4",
    "split": "^1.0.0",
    "wreck": "^10.0.0"
  },
  "pre-commit": [
    "test"
  ],
  "dependencies": {
    "abstract-leveldown": "^2.6.0",
    "async": "^2.0.0",
    "concat-stream": "^1.5.1",
    "debug": "^2.2.0",
    "deepmerge": "^0.2.10",
    "level-sublevel": "^6.5.4",
    "leveldown": "^1.4.6",
    "levelup": "^1.3.2",
    "msgpack5": "^3.4.0",
    "multiaddr": "^2.0.2",
    "once": "^1.3.3",
    "reconnect-core": "^1.3.0",
    "through2": "^2.0.1",
    "uuid": "^2.0.2"
  }
}
